<div class="row">
  <div class="col-md-9">
    <div class="panel panel-transparent" id="content-member">
      <div class="panel-body">
        {{#if (gt model.meta.clients 0)}}
          {{#bs-alert dismissible=false type="info"}}
            {{model.name}} has {{pluralize-word model.meta.clients "Client"}}.
          {{/bs-alert}}
        {{else}}
          {{#bs-alert dismissible=false type="warning"}}
            {{model.name}} has no clients. Add a client {{#link-to "providers.show.clients" model.id}}here{{/link-to}}.
          {{/bs-alert}}
        {{/if}}

        {{#if (gt model.meta.prefixes 1)}}
          {{#bs-alert dismissible=false type="info"}}
            {{model.name}} uses {{pluralize-word model.meta.prefixes "Prefix"}}.
          {{/bs-alert}}
        {{else}}
          {{#bs-alert dismissible=false type="warning"}}
            {{model.name}} uses only the test prefix 10.5072. Ask DataCite staff to add prefixes.
          {{/bs-alert}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
