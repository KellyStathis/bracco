<div class="row">
  <div class='col-md-9 panel-list' id="content">
    {{model-search model=model.prefixes sortable=true}}
    
    {{#if model.prefixes}}
      {{#each model.prefixes as |provider-prefix|}}
        <div class="panel panel-transparent">
          <div class="panel-body">
            {{#if (eq provider-prefix.prefix.id "10.5072")}}
              <h3 class="member">{{provider-prefix.prefix.id}}</h3>
            {{else}}
              <h3 class="work">{{#link-to "providers.show.prefixes.show" model.provider.id provider-prefix.prefix.id}}{{provider-prefix.prefix.id}}{{/link-to}}</h3>
            {{/if}}

            {{#if (eq provider-prefix.prefix.id "10.5072")}}
              <span class="icon-default">Demo prefix</span>
            {{else}}
              <h5>{{pluralize-word provider-prefix.clients.length "Client" omitCount=true}}</h5>
              {{#if provider-prefix.clients}}
                {{#each provider-prefix.clients as |client|}}
                  {{#link-to "clients.show.prefixes.show" client.id provider-prefix.prefix.id}}{{client.name}}{{/link-to}}<br/>
                {{/each}}
                <h5>DOIs</h5>
                {{#link-to "providers.show.dois" provider-prefix.provider.id (query-params prefix=provider-prefix.prefix.id)}}DOIs for prefix {{provider-prefix.prefix.id}}{{/link-to}}
              {{else}}
                <span class="icon-warning">No clients found.</span>
              {{/if}}
            {{/if}}

            <h5>Added</h5>
            {{format-time provider-prefix.created year='numeric' month='long' day='numeric'}}
          </div>
        </div>
      {{/each}}
      <div class="text-center">
        {{#if (gt model.prefixes.meta.total_pages 1)}}
          {{page-numbers content=model.prefixes numPagesToShow=5 showFL=true}}
        {{/if}}
      </div>
    {{else}}
      {{#bs-alert dismissible=false type="warning"}}
        No prefixes found.
      {{/bs-alert}}
    {{/if}}
  </div>

  <div class='col-md-3'>
    {{#if (can "write prefix" model.prefixes)}}
      <div class="panel facets">
        <div class="panel-body">
          <div class="btn-toolbar">
            <div class="btn-group btn-group-sm">
              {{#link-to "providers.show.prefixes.new" model.provider.id class="btn btn-warning"}}{{fa-icon "link"}}Assign Prefix{{/link-to}}
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="panel panel-transparent">
        <div class="panel-body">
          <div class="edit"></div>
        </div>
      </div>
    {{/if}}

    {{#if model.prefixes.meta.states}}
      <div class="panel facets add">
        <div class="panel-body">
          <h4>State <span class="small">{{fa-icon "question-circle-o"}}{{#bs-tooltip placement="top"}}Filter prefixes by whether they have been assigned to a client.{{/bs-tooltip}}</span></h4>
          <ul>
            {{#each model.prefixes.meta.states as |state|}}
              <li>
                {{#if model.prefixes.otherParams.state}}
                  {{#link-to 'providers.show.prefixes' (query-params state=null)}}{{fa-icon "check-square-o"}}{{/link-to}}
                {{else}}
                  {{#link-to 'providers.show.prefixes' (query-params state=state.id)}}{{fa-icon "square-o"}}{{/link-to}}
                {{/if}}
                <div class="facet-title">{{state.title}}</div>
                <span class="number pull-right">{{state.count}}</span>
                <div class="clearfix"/>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/if}}

    {{#if model.prefixes.meta.years}}
      <div class="panel facets add">
        <div class="panel-body">
          <h4>Year created</h4>
          <ul>
            {{#each model.prefixes.meta.years as |year|}}
              <li>
                {{#if model.prefixes.otherParams.year}}
                  {{#link-to 'providers.show.prefixes' (query-params year=null)}}{{fa-icon "check-square-o"}}{{/link-to}}
                {{else}}
                  {{#link-to 'providers.show.prefixes' (query-params year=year.id)}}{{fa-icon "square-o"}}{{/link-to}}
                {{/if}}
                <div class="facet-title">{{year.title}}</div>
                <span class="number pull-right">{{year.count}}</span>
                <div class="clearfix"/>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/if}}
    {{#if (eq link "prefixes")}}
      <div class="panel facets">
        <div class="panel-body">
          <h4>Providers <span class="small">{{fa-icon "question-circle-o"}}{{#bs-tooltip placement="top"}}Filter prefixes by DOI Registration Provider they work with.{{/bs-tooltip}}</span></h4>
          <ul>
            {{#each model.prefixes.meta.providers as |provider|}}
              <li>
                {{#if model.prefixes.otherParams.provider-id}}
                  {{#link-to 'providers.show.prefixes' (query-params provider-id=null)}}{{fa-icon "check-square-o"}}{{/link-to}}
                {{else}}
                  {{#link-to 'providers.show.prefixes' (query-params provider-id=provider.id)}}{{fa-icon "square-o"}}{{/link-to}}
                {{/if}}
                <div class="facet-title">{{provider.title}}</div>
                <span class="number pull-right">{{provider.count}}</span>
                <div class="clearfix"/>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/if}}
  </div>
</div>
