<div class="row">
  <div class="col-md-3">
    {{#if (and (can "update prefix" model) (not model.repositories))}}
      <div class="panel facets add">
        <div class="panel-body">
          <div class="btn-toolbar">
            <div class="btn-group btn-group-sm">
              {{#link-to 
                "providers.show.prefixes.show.delete" 
                model.provider.id 
                model.prefix.id 
                class="btn btn-warning"
              }}{{fa-icon "pencil"}} Remove Prefix
              {{/link-to}}
            </div>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
  <div class="col-md-9">
    <h2 class="work">{{model.prefix.id}}</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    {{repository-sidebar model=model}}
  </div>
  <div class="col-md-9">
    <div class="panel panel-transparent">
      <div class="panel-body">
        <h5>{{pluralize model.repositories.length "Repository" without-count=true}}</h5>
        {{#if model.repositories}}
          {{#each model.repositories as |repository|}}
            {{#link-to "repositories.show.prefixes.show" repository.id model.prefix.id}}{{repository.name}}{{/link-to}}<br>
          {{/each}}
        {{else}}
          <span class="icon-warning">No repositories found.</span>
        {{/if}}
      </div>
    </div>
  </div>
</div>