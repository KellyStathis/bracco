{{#if (can "read provider" model)}}
  {{application-header default=true}}

  <div class="container-fluid">
    {{#if (or (can "read index") (can "read provider" model))}}
      <ol class="breadcrumb">
        {{#if (can "read index")}}
          <li class="breadcrumb-item">{{#link-to "index"}}DataCite{{/link-to}}</li>
          <li class="breadcrumb-item">{{#link-to "providers"}}Members{{/link-to}}</li>
        {{/if}}
        {{#if (eq model.memberType "consortium_organization")}}
          <li class="breadcrumb-item">{{#link-to "providers.show.index" model.consortium.id}}{{model.consortium.name}}{{/link-to}}</li>
        {{/if}}
      </ol>
    {{/if}}

    {{#if model.logoUrl}}
      <div class="pull-right">
        <img class="img-small" alt="logo" src={{model.logoUrl}}>
      </div>
    {{/if}}
    <h2 class="work">{{model.displayName}}{{#if (not model.isActive)}} <span class="small icon-warning">account not active</span>{{/if}}</h2>

    <div class="tab-content nav-tabs-member">
      {{#bs-nav type="tabs" as |nav|}}
        {{#nav.item route="providers.show.index" model=model.id class="nav-link"}}Info{{/nav.item}}
        {{#nav.item route="providers.show.settings" model=model.id class="nav-link"}}Settings{{/nav.item}}

        {{#if (eq model.memberType "consortium")}}
          {{#nav.item route="providers.show.organizations" class="nav-link"}}Consortium Organizations{{/nav.item}}
        {{/if}}

        {{#if (not-eq model.memberType "member_only")}}
          {{#nav.item route="providers.show.repositories" model=model.id class="nav-link"}}Repositories{{/nav.item}}
          {{#if (not-eq model.memberType "consortium")}}
            {{#nav.item route="providers.show.prefixes" model=model.id class="nav-link"}}Prefixes{{/nav.item}}
          {{/if}}
          {{#nav.item route="providers.show.dois" model=model.id class="nav-link doi"}}DOIs{{/nav.item}}
        {{/if}}
      {{/bs-nav}}
    </div>

    {{outlet}}
  </div>
{{else}}
  {{application-header}}
  {{landing-page}}
{{/if}}
