{{#if (can "read index")}}
  {{application-header default=true}}

  <div class="container-fluid">
    <div class="content">
      {{index-header}}

      <div class="row">
        {{bar-chart data=model.providerCount label='Provider' link='providers'}}
        {{bar-chart data=model.clientCount label='Client' link='clients'}}
        {{bar-chart data=model.doiCount label='DOI' link='dois' cumulative=false}}
      </div>

      {{#if (can "read messages" model)}}
        <div class="row">
          <div class="col-md-9">
            {{#each flashMessages.queue as |flash|}}
              {{flash-message flash=flash}}
            {{/each}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>
{{else}}
  {{application-header}}
  {{landing-page}}
{{/if}}
