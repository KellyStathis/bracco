{{#if (can "read index")}}
  {{application-header default=true}}

  <div class="container-fluid">
    <div class="content">
      {{index-header}}

      {{#if (can "read messages" model)}}
        <div class="row">
          <div class="col-md-9">
            {{#each flashMessages.queue as |flash|}}
              {{flash-message flash=flash}}
            {{/each}}
          </div>
        </div>
      {{/if}}

      {{provider-show model=model admin=true}}
    </div>
  </div>
{{else}}
  {{application-header}}
  {{landing-page}}
{{/if}}
