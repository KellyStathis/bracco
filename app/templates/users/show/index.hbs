<div class="content">
  <div class="row row-chart">
    {{bar-chart data=model.doiCount label='DOI' model=model link='users.show.dois' summarize=true}}
    {{donut-chart data=model.resourceTypeCount label='DOI' model=model link='users.show.dois'}}
    {{metrics-counter data=model.citationCount label='Citations' model=model }}
    {{metrics-counter data=model.viewCount label='Views' model=model }}
    {{metrics-counter data=model.downloadCount label='Downloads' model=model }}
  </div>

  {{#if (can "read messages" model)}}
    <div class="row">
      <div class="col-md-9">
        {{#each flashMessages.queue as |flash|}}
          {{flash-message flash=flash}}
        {{/each}}
      </div>
    </div>
  {{/if}}
</div>
