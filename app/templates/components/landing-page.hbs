{{#if (eq currentUser.role "staff_admin")}}
  <div class="section section-white">
    <div class="row row-section">
      <div class="container-fluid">
        <div class="col-md-8 col-sm-offset-2">
          <p class="landing-page">
            {{currentUser.name}}, your are logged in as staff admin.
            Please choose one of the following options to proceed:
          </p>
        </div>
      </div>
    </div>
    <div class="row row-section">
      <div class="container-fluid">
        <div class="col-sm-2 info col-sm-offset-2">
          {{#link-to "members"}}
            <div class="icon icon-landing">
              {{fa-icon "file-text"}}
            </div>
            <h3>Members</h3>
          {{/link-to}}
          <div class="description">
            <p>Manage all members who use the DOI Registration Service.</p>
          </div>
        </div>
        <div class="col-sm-2 info">
          {{#link-to "data-centers"}}
