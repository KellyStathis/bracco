              {{fa-icon "users"}}
            </div>
            <h3>Users</h3>
          {{/link-to}}
          <div class="description">
            <p>Manage all users who use the DOI Registration Service</p>
          </div>
        </div>
        <div class="col-sm-2 info">
          {{#link-to "works"}}
            <div class="icon icon-landing">
              {{fa-icon "file-text"}}
            </div>
            <h3>DOIs</h3>
          {{/link-to}}
          <div class="description">
            <p>Register and manage DOIs and their metadata.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
