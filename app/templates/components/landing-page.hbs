              {{fa-icon "sitemap"}}
            </div>
            <h3>Clients</h3>
          {{/link-to}}
          <div class="description">
            <p>Manage all clients who use the DOI Registration Service.</p>
          </div>
        </div>
        <div class="col-sm-2 info">
          {{#link-to "users"}}
