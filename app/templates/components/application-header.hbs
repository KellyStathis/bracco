<BsNavbar
  @type={{type}} 
  @fluid={{true}} 
  @collapsed={{collapsed}}
  @onCollapse={{action (mut collapsed) true}}
  @onExpand={{action (mut collapsed) false}} as |navbar|>

  <div class="navbar-header">
    {{navbar.toggle}}
    <a href="/" class="navbar-brand">{{title}}</a>
  </div>
  <navbar.content>
    <navbar.nav class="navbar-right" as |nav|>
      {{#if home}}
        <nav.item>{{#dynamic-link params=home}}Home{{/dynamic-link}}</nav.item>
      {{/if}}
      <nav.item><a target="_blank" rel="noopener" href="https://support.datacite.org">Support</a></nav.item>
      {{#if (and user session.isAuthenticated)}}
        <nav.dropdown as |dd|>
          <dd.toggle id="account_menu_link">
            {{uppercase currentUser.uid}}
            <span class="caret"></span>
          </dd.toggle>
          <dd.menu as |menu|>
            <menu.item class="dropdown-header">
              Role: {{currentUser.roleName}}
            </menu.item>
            <menu.item>
              {{#dynamic-link params=settings}}{{fa-icon "cog"}} Settings{{/dynamic-link}}
            </menu.item>
            <menu.divider/>
            <menu.item>
              <a {{action "invalidateSession"}}>{{fa-icon "sign-out"}} Sign out</a>
            </menu.item>
          </dd.menu>
        </nav.dropdown>
      {{else}}
        <nav.item>{{#link-to "sign-in" class="btn btn-sm btn-neutral"}}{{fa-icon "sign-in"}} {{t "user.signin"}}{{/link-to}}</nav.item>
      {{/if}}
    </navbar.nav>
  </navbar.content>
</BsNavbar>
