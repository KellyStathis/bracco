<div class="row">
  <div class="col-md-9">
    <div id="metadata" class="input-group pull-right">
      <select onchange={{action 'selectMetadata' value="target.value"}}>
        {{#each-in formats as |key value|}}
          <option name="metadata" value={{key}} selected={{eq metadata key}}>{{value}}</option>
        {{/each-in}}
      </select>
    </div>
    <h3 class="member-results">Metadata</h3>
    <div class="clearfix"/>
  </div>
</div>
{{#if summary}}
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-transparent">
        <div class="panel-body">
          <h3 class="work">
            <a href="{{model.identifier}}">{{model.title}}</a>
            <span class="small">{{model.resourceTypeId}}</span>
          </h3>
          {{{format-author model.author}}}
          <div class="metadata">
            {{format-metadata model.published resourceTypeGeneral=model.resourceTypeGeneral resourceType=model.resourceType containerTitle=model.containerTitle version=model.version}}
          </div>
          {{#if model.description}}
            <div class="description">
              {{format-text model.description limit=75}}
            </div>
          {{/if}}
          {{#if model.license}}
            {{cc-license licenseURL=model.license}}
          {{/if}}
        </div>
        <div class="panel-footer">
          <span class="pull-right">{{titleize doi.resourceTypeId}}</span>
          <a href="{{model.identifier}}">{{fa-icon "external-link"}} {{model.identifier}}</a>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      {{client-sidebar model=model}}
    </div>
  </div>
{{else if output}}
  <div class="panel panel-transparent">
    <div class="panel-body">
      {{#code-block class="metadata"}}
{{output}}
      {{/code-block}}
    </div>
  </div>
{{/if}}
