{{#if (gt index 0)}}
  <div class="input-group">
    <input type="text" class="form-control alternate-identifier-field" value={{fragment.identifier}} oninput={{action "updateIdentifier" value="target.value"}} data-test-alternate-identifier/>
    <span class="input-group-btn">
      <BsButton @outline={{true}} @onClick={{action "deleteIdentifier" index}}>{{fa-icon "trash"}}</BsButton>
    </span>
  </div>
  <div class="help-block help-block-fragment">An identifier or identifiers other than the primary Identifier applied to the resource being registered.</div>
{{else}}
  <input type="text" class="form-control alternate-identifier-field" value={{fragment.identifier}} oninput={{action "updateIdentifier" value="target.value"}} data-test-alternate-identifier/>
  <div class="help-block help-block-fragment">An identifier or identifiers other than the primary Identifier applied to the resource being registered.</div>
{{/if}}

  <div class="input-label">
    <label for="identifierType" class="subtitle">Alternate Identifier Type</label>
  </div>
  <input type="text" class="form-control alternate-identifier-type-field" value={{fragment.identifierType}} oninput={{action "updateIdentifierType" value="target.value"}} data-test-alternate-identifier-type/>
  <div class="help-block help-block-fragment">The type of the Alternate Identifier.</div>


<hr />
