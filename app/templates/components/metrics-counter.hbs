<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      {{label}} <span class="small pull-right">total</span>
    </h3>
  </div>
  <div class="panel-body panel-chart">
    <div class="user-metrics-counter-box" id="metrics-counter-doi">
      <p class="user-metrics-counter">
        {{#if (gt data 0)}}
          <LinkTo @route={{link}} @query={{query}} @model={{model.id}}>{{format-numbers count}}</LinkTo>
        {{else}}
          {{format-numbers count}}
        {{/if}}
      </p>
    </div>
  </div>
</div>
