<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      {{pluralize count label without-count=true}}
      <span class="small pull-right">total reported</span>
    </h3>
  </div>
  <div class="panel-body panel-chart">
    <div class="user-metrics-counter-box" id="metrics-counter-doi">
      <p class="user-metrics-counter">
        {{ format-numbers count }} 
      </p>
    </div>
  </div>
</div>
