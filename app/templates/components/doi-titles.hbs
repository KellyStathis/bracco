<div class="form-group {{if hasErrors 'has-error'}} {{if isValidating 'has-success'}}">
  <label class="control-label col-md-3">Title(s)</label>
  <div class="col-md-9">
    {{#each model.titles as |title index|}}
      {{#if (gt index 0)}}
        {{doi-title model=model fragment=title form=form index=index}}
      {{else}}
        {{doi-title model=model fragment=title form=form index=index setIsValidating=(action "setIsValidating") setHasErrors=(action "setHasErrors") setValidations=(action "setValidations")}}
      {{/if}}
    {{/each}}

    {{#if (lte model.titles.length 4)}}
      {{#bs-button class="btn-sm" id="add-title" outline=true onClick=(action "addTitle")}}{{fa-icon "plus"}} Add another title{{/bs-button}}
    {{/if}}
  </div>
</div>