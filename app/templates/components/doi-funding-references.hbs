<div class="form-group {{validationClass}}">
  <label class="control-label col-md-3">Funding References</label>
  <div class="col-md-9 compact-select">
    {{#each model.fundingReferences as |fundingReference index|}}
      <DoiFundingReference @model={{model}} @fragment={{fundingReference}} @form={{form}} @index={{index}} />
    {{/each}}

    {{#if (or (not model.fundingReferences) (lte model.fundingReferences.length 4))}}
      <BsButton @id="add-funding-reference" @class="btn-sm" @outline={{true}} @onClick={{action "addFundingReference"}}>{{fa-icon "plus"}} Add {{if (gt model.fundingReferences.length 0) "another "}}funding reference</BsButton>
    {{/if}}
  </div>
</div>