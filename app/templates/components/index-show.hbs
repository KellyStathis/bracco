{{#if edit}}
  {{#bs-form formLayout="vertical" model=model onSubmit=(action "submit" model) as |form|}}
    {{form.element controlType="text" label="Name" property="name" required=false}}
    {{form.element controlType="text" label="Contact" property="contact" required=false}}
    {{form.element controlType="email" label="Email" property="email" required=false}}

    <div class="pseudo-footer">
      <div class="btn-toolbar pull-right">
        <button {{action "cancel"}} class="btn btn-sm">Cancel</button>
        <button type="submit" class="btn btn-sm btn-fill">Save</button>
      </div>
      <div class="clearfix"/>
    </div>
  {{/bs-form}}
{{else}}
  {{#if model.contactEmail}}
    <h5>Contact Email</h5>
    <a href="{{model.contactEmail}}">{{model.email}}</a>
  {{/if}}

  <div class="pseudo-footer">
    {{model.uid}}
    <span>{{fa-icon "question-circle-o"}}
      {{#bs-tooltip placement="top" viewportPadding=10}}Each provider has a unique ID.{{/bs-tooltip}}
    </span>
    <button {{action "edit" model}} class="btn-link">{{fa-icon "pencil"}}</button>
  </div>
{{/if}}
