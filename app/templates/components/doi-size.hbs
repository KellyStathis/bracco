  <input type="text" placeholder="Size" class="form-control size-field" value={{fragment}} oninput={{action "updateSize" value="target.value"}} onblur={{action "selectSize" }} data-test-size/>    
  <span class="input-group-btn">
    <BsButton @outline={{true}} @onClick={{action "deleteSize" index}}>{{fa-icon "trash"}}</BsButton>
  </span>
</div>
