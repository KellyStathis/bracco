                <span class="number pull-right">{{format-number linkCheckStatus.count}}</span>
                <div class="clearfix"/>
              </li>
            {{/each}}
          {{else}}
            <li>
              {{#link-to link (query-params link-check-status='')}}{{fa-icon "check-square-o"}}{{/link-to}}
              <div class="facet-title">{{model.otherParams.link-check-status}}</div>
              <span class="number pull-right">0</span>
              <div class="clearfix"/>
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
  {{/if}}
</div>

<div class='col-md-9 panel-list' id="content">
  {{model-search model=model link=link sortable=true}}

  {{#if model}}
    {{#each model as |doi|}}
      <div class="panel panel-transparent">
        {{doi-summary model=doi isList=true}}

        <div class="panel-footer">
          {{#if doi.isDraft}}
            {{fa-icon "info-circle"}} {{doi.doi}}
          {{else}}
            <a href="{{doi.identifier}}">{{fa-icon "external-link"}} {{doi.identifier}}</a>
          {{/if}}
        </div>
      </div>
    {{/each}}
    <div class="text-center">
      {{#if (gt model.meta.total_pages 1)}}
        {{page-numbers content=model numPagesToShow=5 showFL=true}}
      {{/if}}
    </div>
  {{else}}
    {{#bs-alert dismissible=false type="warning"}}
      No DOIs found.
    {{/bs-alert}}
  {{/if}}
</div>
