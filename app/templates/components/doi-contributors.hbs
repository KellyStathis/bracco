<div class="form-group {{validationClass}}">
  <label class="control-label col-md-3">Contributor(s)</label>
  <div class="col-md-9">
    {{#each model.contributors as |contributor index|}}
      {{#if (gt index 0)}}
        <DoiContributor @model={{model}} @fragment={{contributor}} @form={{form}} @index={{index}} />
      {{else}}
        <DoiContributor @model={{model}} @fragment={{contributor}} @form={{form}} @index={{index}} />
      {{/if}}
    {{/each}}

    {{#if  (or (not model.contributors) (lte model.contributors.length 24))}}
      <BsButton @id="add-contributor" @class="btn-sm" @outline={{true}} @onClick={{action "addContributor"}}>{{fa-icon "plus"}} Add {{if (gt model.contributors.length 0) "another "}} contributor</BsButton>
    {{/if}}
  </div>
</div>