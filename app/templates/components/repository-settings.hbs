<div class="row">
  <div class="col-md-9">
    <h3 class="member-results">
      {{model.title}}
    </h3>
  </div>
</div>
<div class="row">
  {{client-sidebar model=model}}
  <div class="col-md-9" id="show">
    <div class="panel panel-transparent" id="content-member">
      <div class="panel-footer">
        {{model.name}}
        <span>{{fa-icon "question-circle-o"}}
          {{#bs-tooltip placement="top" viewportPadding=10}}Each client has a unique ID that starts with the provider ID.{{/bs-tooltip}}
        </span>
        {{#if (can "write client" model)}}
          <div class="btn-toolbar pull-right">
            <div class="btn-group btn-group-sm pull-right">
              {{#link-to "clients.edit" client.id}}{{fa-icon "pencil"}}{{/link-to}}
            </div>
            {{#if (can "delete client" model)}}
              <div class="btn-toolbar pull-right">
                <div class="btn-group btn-group-sm pull-right">
                  {{#link-to "clients.edit" client.id}}{{fa-icon "tra"}}{{/link-to}}
                </div>
              </div>
            {{/if}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
