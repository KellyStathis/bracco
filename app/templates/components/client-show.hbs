{{#if edit}}
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-transparent" id="content-member">
        <div class="panel-body">
          <h3 class="edit">Edit Client</h3>

          {{#bs-form formLayout="vertical" model=model onSubmit=(action "submit" model) submitOnEnter=true as |form|}}
            {{form.element controlType="text" label="Client ID" placeholder="Client ID" property="id" disabled=true}}
            {{form.element controlType="text" label="Name" placeholder="Name" property="name" required=false}}
            {{form.element controlType="text" label="Contact" placeholder="Contact" property="contact" required=false}}
            {{form.element controlType="email" label="Email" placeholder="Email" property="email" required=false}}
            {{form.element controlType="textarea" label="Domains" placeholder="Domains" property="domains" required=false}}
            {{form.element controlType="checkbox" label="Account is active" property="isActive"}}

            <div class="pseudo-footer">
              <div class="btn-toolbar pull-right">
                <button {{action "cancel"}} class="btn btn-sm">Cancel</button>
                <button type="submit" class="btn btn-sm btn-fill">Save</button>
              </div>
              <div class="clearfix"/>
            </div>
          {{/bs-form}}
        </div>
      </div>
    </div>
    <div class='col-md-3'>
      <div class="panel panel-transparent">
        <div class="panel-body">
          <div class="edit"></div>
        </div>
      </div>

      {{client-sidebar model=model}}
    </div>
  </div>
{{else if delete}}
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-transparent">
        <div class="alert alert-danger" role="alert">
          Are you sure you want to delete this client? This action cannot be undone.
        </div>

        <div class="pseudo-footer">
          <div class="btn-toolbar pull-right">
            <button {{action "cancel"}} class="btn btn-sm">Cancel</button>
            <button {{action "destroy" link}} class="btn btn-sm btn-fill">Delete</button>
          </div>
          <div class="clearfix"/>
        </div>
      </div>
    </div>
    <div class='col-md-3'>
      {{client-sidebar model=model}}
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-transparent">
        <div class="panel-body">
          <h5>Client ID</h5>
          {{model.uid}}

          {{#if model.contact}}
            <h5>Contact</h5>
            {{model.contact}}
          {{/if}}

          {{#if model.email}}
            <h5>Email</h5>
            <a href="mailto:{{model.email}}">{{model.email}}</a>
          {{/if}}

          {{#if model.domainList}}
            <h5>
              Domains
              <span>{{fa-icon "question-circle-o"}}
                {{#bs-tooltip placement="top" viewportPadding=10}}URLs for DOIs must point to one of these domains.{{/bs-tooltip}}
              </span>
            </h5>
            {{#each model.domainList as |domain|}}
              {{domain}}<br/>
            {{/each}}
          {{/if}}
        </div>
      </div>
    </div>
    <div class='col-md-3'>
      {{#if (can "update client")}}
        <div class="panel facets">
          <div class="panel-body">
            <button {{action "edit" model}} class="btn btn-warning">{{fa-icon "pencil"}}Edit Client</button>
          </div>
        </div>
      {{/if}}

      {{client-sidebar model=model}}
    </div>
  </div>
{{/if}}
