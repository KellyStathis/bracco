<div class="content">
  {{#if (can "read messages" model)}}
    <div class="row">
      <div class="col-md-9 col-lg-offset-3">
        {{#each flashMessages.queue as |flash|}}
          <FlashMessage @flash={{flash}} />
        {{/each}}
      </div>
    </div>
  {{/if}}
  <UserRole />
  <div class="row row-chart">
    <BarChart @data={{json.providers}} @label="Member" @link="providers" @offset={{true}} />
    <BarChart @data={{json.clients}} @label="Repository" @link="repositories" />
    <BarChart @data={{json.dois}} @label="DOI" @link="dois" @cumulative={{false}} />
  </div>
</div>
