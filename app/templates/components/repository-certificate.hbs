{{#if (gt index 0)}}
  <div class="input-group">
    <div class="power-select-fragment">
      {{#form.element controlType="power-select" disabled=disabled value=certificate options=certificates as |el|}}
        {{el.control onChange=(action "selectCertificate") search=(action "searchCertificate") placeholder="Select Certificate" searchPlaceholder="Type to search..." allowClear=true}}
      {{/form.element}}
    </div>
    <span class="input-group-addon" style="vertical-align:top;padding-top:3px;">
    {{#bs-button outline=true onClick=(action "deleteCertificate" index)}}{{fa-icon "trash" pull="left" style="margin:0;"}}{{/bs-button}}
    </span>
  </div>
{{else}}
  <div class="power-select-fragment">
    {{#form.element controlType="power-select" disabled=disabled value=certificate options=certificates as |el|}}
      {{el.control onChange=(action "selectCertificate") search=(action "searchCertificate") placeholder="Select Certificate" searchPlaceholder="Type to search..." allowClear=true}}
    {{/form.element}}
  </div>
{{/if}}
