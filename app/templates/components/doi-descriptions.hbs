<div class="form-group">
  {{#each model.descriptions as |description index|}}
  {{doi-description model=model disabled=disabled fragment=description form=form index=index}}
  {{/each}}

  <div class="col-md-9 col-md-offset-3">
    {{#if (lte model.descriptions.length 4)}}
    {{#bs-button class="btn-sm" outline=true onClick=(action "addDescription")}}{{fa-icon "plus"}} Add
    description{{/bs-button}}
    {{/if}}
  </div>
</div>