  <div class="row">
    <div class='col-md-9'>
      <h2 class="work">{{model.doi}}</h2>
    </div>

    <div class='col-md-3'>
      <div class="panel facets add">
        <div class="panel-body">
          <div class="btn-toolbar">
            <div class="btn-group-vertical btn-group-sm">
              {{#if (or (can "edit doi" model) (and (can "delete doi" model) model.isDraft))}}
                {{#if (can "edit doi" model)}}
                  {{#link-to "clients.show.dois.show.edit" model.client.id model.id class="btn btn-warning"}}{{fa-icon "wpforms"}} Update DOI (Form){{/link-to}}
                {{/if}}
                {{#if (can "modify doi" model)}}
                  {{#link-to "clients.show.dois.show.modify" model.client.id model.id class="btn btn-warning"}}{{fa-icon "upload"}} Update DOI (File Upload){{/link-to}}
                {{/if}}
                {{#if (and (can "delete doi" model) model.isDraft)}}
                  {{#link-to "clients.show.dois.show.delete" model.client.id model.id class="btn btn-warning"}}{{fa-icon "trash"}} Delete DOI{{/link-to}}
                {{/if}}
              {{else if (can "transfer doi" model)}}
                {{#link-to "clients.show.dois.show.transfer" model.client.id model.id class="btn btn-warning"}}{{fa-icon "arrow-circle-o-right"}} Transfer DOI{{/link-to}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{doi-url model=model}}
  {{doi-metadata model=model}}

  {{#if model.xml}}
    {{doi-citation model=model}}
  {{/if}}