{{#if (can "read client" model provider=model.provider)}}
  {{application-header default=true}}

  <div class="container-fluid">
    {{#if (can "read provider" model.provider)}}
      <ol class="breadcrumb">
        {{#if (can "read index")}}
          <li class="breadcrumb-item">{{#link-to "index"}}DataCite{{/link-to}}</li>
          <li class="breadcrumb-item">{{#link-to "providers"}}{{if (feature-flag 'useRepositories') 'Members' 'Providers'}}{{/link-to}}</li>
        {{/if}}
        {{#if (and (can "read provider" model.provider.consortium) (eq model.provider.memberType "consortium_organization"))}}
          <li class="breadcrumb-item">{{#link-to "providers.show.index" model.provider.consortium.id}}{{model.provider.consortium.name}}{{/link-to}}</li>
        {{/if}}
        <li class="breadcrumb-item">{{#link-to "providers.show" model.provider.id}}{{model.provider.name}}{{/link-to}}</li>
        {{#if (or (eq model.provider.memberType "consortium") (eq model.provider.memberType "consortium_organization"))}}
          <li class="breadcrumb-item">{{#link-to "providers.show.repositories" model.provider.id}}Repositories{{/link-to}}</li>
        {{else}}
          <li class="breadcrumb-item">{{#link-to "providers.show.clients" model.provider.id}}Clients{{/link-to}}</li>
        {{/if}}
      </ol>
    {{/if}}

    <div id="show">
      {{#if model.re3data}}
        <div class="pull-right">
          <a href="{{model.re3data}}"><img class="img-responsive" src="{{model.badgeUrl}}"></a>
        </div>
      {{/if}}

      <h2 class="work">{{model.name}}{{#if (not model.isActive)}} <span class="small icon-warning">account not active</span>{{/if}}</h2>

      <div class="tab-content nav-tabs-member">
        {{#bs-nav type="tabs" as |nav|}}
          {{#nav.item route="clients.show.index" model=model.id class="nav-link"}}Info{{/nav.item}}
          {{#nav.item route="clients.show.settings" model=model.id class="nav-link"}}Settings{{/nav.item}}
          {{#nav.item route="clients.show.prefixes" model=model.id class="nav-link"}}Prefixes{{/nav.item}}
          {{#nav.item route="clients.show.dois" model=model.id class="nav-link doi"}}DOIs{{/nav.item}}
        {{/bs-nav}}
      </div>
    </div>

    {{outlet}}
  </div>
{{else}}
  {{application-header}}
  {{landing-page}}
{{/if}}
