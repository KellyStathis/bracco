{{#if (can "read work" model)}}
  {{application-header default=true}}

  <div class="container-fluid">
    <div class="content">
      <ol class="breadcrumb">
        {{#if (can "read index")}}
          <li class="breadcrumb-item">{{#link-to "works"}}DataCite{{/link-to}}</li>
        {{/if}}
        <li class="breadcrumb-item">{{#link-to "members.show.works" model.member.id}}{{model.member.title}}{{/link-to}}</li>
        <li class="breadcrumb-item">{{#link-to "data-centers.show.works" model.data-center.id}}{{model.data-center.name}}{{/link-to}}</li>
      </ol>

      <h2 class="work">{{model.doi}}</h2>

      {{work-url model=model}}
      {{work-metadata model=model}}
      {{work-media model=model}}
    </div>
  </div>
{{else}}
  {{application-header}}
  {{landing-page}}
{{/if}}
