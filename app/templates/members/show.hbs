{{#if (can "read member" model)}}
  <ol class="breadcrumb">
    <li class="breadcrumb-item">{{#link-to "index"}}DataCite{{/link-to}}</li>
  </ol>

  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-transparent" id="content-member">
        <div class="panel-title work">
          <h2>{{model.title}}</h2>
        </div>
        <div class="panel-body">
          <div class="country">
            {{model.country}}
          </div>
        </div>
        <div class="panel-footer">
          {{model.name}}
          <span>{{fa-icon "question-circle-o"}}
            {{#bs-tooltip placement="top" viewportPadding=10}}Each DOI service provider has a unique ID.{{/bs-tooltip}}
          </span>
          {{#if (can "write member")}}
            <div class="btn-toolbar pull-right">
              <div class="btn-group btn-group-sm">
                {{fa-icon "pencil"}}
              </div>
              {{#if (can "delete member")}}
                <div class="btn-group btn-group-sm">
                  {{fa-icon "trash"}}
                </div>
              {{/if}}
            </div>
          {{/if}}
          <div class="clearfix"/>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel-facets">
        <div class="panel-body metadata">
          <h5>Record created</h5>
          <div class="created">
            {{format-date model.created}}
          </div>
          {{#if (gt model.updated model.created)}}
            <h5>Record modified</h5>
            <div class="updated">
              {{format-date model.updated}}
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='col-md-9'>
      <div class="tab-content nav-tabs-member">
        {{#bs-nav type="tabs" as |nav|}}
          {{#nav.item}}{{#nav.link-to "members.show.data-centers" model.id class="nav-link"}}Clients{{/nav.link-to}}{{/nav.item}}
          {{#nav.item}}{{#nav.link-to "members.show.users" model.id class="nav-link"}}Users{{/nav.link-to}}{{/nav.item}}
          {{#nav.item}}{{#nav.link-to "members.show.works" model.id class="nav-link"}}DOIs{{/nav.link-to}}{{/nav.item}}
        {{/bs-nav}}
      </div>
    </div>
  </div>
  {{outlet}}
{{else}}
  <div class="row">
    <div class='col-md-9'>
      {{#bs-alert dismissible=false type="warning"}}
        You have no permissions to access this page.
      {{/bs-alert}}
    </div>
  </div>
{{/if}}
