{{application-header default=true}}

<div class="container-fluid">
  <ol class="breadcrumb">
    {{#if (can "read index")}}
      <li class="breadcrumb-item">{{#link-to "index"}}DataCite{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "providers"}}Members{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "providers.show" model.repository.provider.id}}{{model.repository.provider.name}}{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "providers.show.repositories" model.repository.provider.id}}Repositories{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "repositories.show" model.repository.id}}{{model.repository.name}}{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "repositories.show.dois" model.repository.id}}DOIs{{/link-to}}</li>
    {{else if (can "read provider" model.repository.provider)}}
      <li class="breadcrumb-item">{{#link-to "providers.show" model.repository.provider.id}}{{model.repository.provider.name}}{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "providers.show.repositories" model.repository.provider.id}}Repositories{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "repositories.show" model.repository.id}}{{model.repository.name}}{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "repositories.show.dois" model.repository.id}}DOIs{{/link-to}}</li> 
    {{else if (can "read repository" model.repository)}}
      <li class="breadcrumb-item">{{#link-to "repositories.show" model.repository.id}}{{model.repository.name}}{{/link-to}}</li>
      <li class="breadcrumb-item">{{#link-to "repositories.show.dois" model.repository.id}}DOIs{{/link-to}}</li>
    {{/if}}
  </ol>
  
  <div id="show">
    <h2 class="work">{{model.id}}</h2>
  </div>

  {{outlet}}
</div>
