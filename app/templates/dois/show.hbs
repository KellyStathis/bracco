{{#if (can "read doi" model)}}
  {{application-header default=true}}

  <div class="container-fluid">
    <div class="content">
      <ol class="breadcrumb">
        {{#if (can "read index")}}
          <li class="breadcrumb-item">{{#link-to "dois"}}DataCite{{/link-to}}</li>
        {{/if}}
        <li class="breadcrumb-item">{{#link-to "providers.show.dois" model.provider.id}}{{model.provider.name}}{{/link-to}}</li>
        <li class="breadcrumb-item">{{#link-to "clients.show.dois" model.client.id}}{{model.client.name}}{{/link-to}}</li>
      </ol>

      <h2 class="work">{{model.doi}}</h2>

      {{doi-url model=model}}
      {{doi-metadata model=model}}
      {{doi-media model=model}}
    </div>
  </div>
{{else}}
  {{application-header}}
  {{landing-page}}
{{/if}}
