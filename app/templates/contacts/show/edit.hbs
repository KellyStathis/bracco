<div class="panel panel-transparent" id="content-member">
  <div class="panel-body">
    <div class="col-md-9 col-md-offset-3">
      <h3 class="edit">
        Update Contact
      </h3>
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    </div>
    <BsForm
      @formLayout="horizontal"
      @horizontalLabelGridClass="col-md-3"
      @model={{model}}
      @onSubmit={{action 'submit' model}}
      @submitOnEnter={{true}} as |form|
    >
      {{!-- <form.element
        @controlType="text"
        @id="id"
        @label="UID"
        @property="id"
        @helpText="The UID is the unique identifier for each contact in DataCite and can't be changed."
        @disabled={{true}}
      /> --}}
      <form.element
        @controlType="text"
        @id="givenName"
        @label="Given Name"
        @property="givenName"
        @required={{false}}
      />
      <form.element
        @controlType="text"
        @id="familyName"
        @label="Family Name"
        @property="familyName"
        @required={{false}}
      />
      <form.element
        @controlType="email"
        @id="email"
        @label="Email"
        @property="email"
        @required={{false}}
      />
      <div class="col-md-offset-3">
        <BsAlert @dismissible={{false}} class="opt-in" @type="warning">
          The contact may receive notifications about administration, webinars, product testing, 
          or news that will impact the use of DataCite services and/or membership. Individuals may remove 
          themselves from mailings by following the unsubscribe link provided in every DataCite email. 
          For information about our privacy practices and commitment to protecting your privacy, please 
          review our
          <a
            target="_blank"
            rel="noreferrer"
            href="https://datacite.org/privacy.html"
          >
            Privacy Policy
          </a>
          .
        </BsAlert>
      </div>
      <div class="col-md-9 col-md-offset-3">
        <button
          type="submit"
          id="update-contact"
          class="btn btn-sm btn-fill"
          disabled={{false}}
        >
          Update Contact
        </button>
        <button class="btn btn-sm" {{action 'cancel' model}}>
          Cancel
        </button>
      </div>
    </BsForm>
  </div>
</div>